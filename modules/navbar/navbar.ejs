<div class="container">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span>
            <span class="icon-bar"></span><span class="icon-bar"></span>
        </button>
        <a href="#" class="navbar-brand"><%- appName %> <span class="badge"><%=appVersion%></span></a>
    </div>
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">

            <% for(var i = 0; i < navigation.length; i++){ %>
            <li>
                <a href="<%= navigation[i].link %>"><%= navigation[i].name %></a>
            </li>
            <% } %>
        </ul>
        <% if (!loggedUser){ %>
        <form class="navbar-form navbar-right" style="padding-top: 5px;">
            <div class="form-group">
                <input id="input-username" type="text" class="form-control input-sm" placeholder="username">
                <input id="input-password" type="password" class="form-control input-sm" placeholder="Password">
            </div>
            <button id="btn-login" type="button" class="btn btn-default btn-sm">Login</button>
            <button id="btn-signup" type="button" class="btn btn-primary btn-sm">Sign Up</button>
        </form>
        <% } else { %>

        <form class="navbar-form navbar-right">
            <div class="btn-group">
                <a class="btn dropdown-toggle btn-default" data-toggle="dropdown"
                   href="#"><%= loggedUser.get('username') %>
                    <span class="caret"></span> </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="#!/user-profile/">User profile</a>
                    </li>
                    <li>
                        <a href="#!/logout">Logout!</a>
                    </li>
                </ul>
            </div>
        </form>
        <% } %>
    </div>
</div>